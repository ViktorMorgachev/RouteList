<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_map_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.huawei.hms.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            map:cameraZoom="9"
            map:mapType="normal"
            map:uiCompass="true"
            map:uiZoomControls="true" />

        <include
            android:id="@+id/panel_change_road"
            layout="@layout/item_change_road_type"
            android:visibility="gone" />

        <include
            android:id="@+id/panel_map_center"
            layout="@layout/item_center_map" />

    </FrameLayout>

    <include
        android:id="@+id/panel_road_info"
        layout="@layout/item_road_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:visibility="gone"
        map:layout_constraintBottom_toBottomOf="parent"
        map:layout_constraintLeft_toLeftOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>